[init]
	defaultBranch = main
[core]
	editor = NVIM_APPNAME="neovim-scn" nvim
	; pager = delta 
[rerere]
	enabled = true

; delta --show-syntax-themes
; syntax theme =>
; 1337

[interactive]
	diffFilter = delta --color-only
	
# Add the alias
[alias]
  sort-branches-by-date = !git for-each-ref --sort=-committerdate --format='%(committerdate:short) %(refname:short)' refs/heads/
[diff]
	; show = delta --line-numbers

[delta]
	features = line-numbers decorations true-color
	navigate = true
	syntax-theme = Nord
	color-only = false
	; side-by-side = true

